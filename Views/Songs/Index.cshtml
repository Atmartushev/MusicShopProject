@model IEnumerable<MusicShopProject.Models.Songs>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Songs" asp-action="Index">
    <p>
        Name: <input type="text" name="SearchName" />
        Artist: <input type="text" name="SearchArtist" />
        Genre: <input type="text" name="SearchGenre" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Added)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song_Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Download_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Added)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Song_Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Download_Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
